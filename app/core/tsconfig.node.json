{
  "compilerOptions": {
    "target": "ESNext",
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./dist",
    "declarationMap": true,
    "paths": {
      "~/*": ["./*"],
      "@assets/*": ["./assets/*"],
      "@addon/*": ["./main/addon/*"],
      "@config/*": ["./main/config/*"],
      "@utils/*": ["./main/utils/*"],
    },
    "types": [
      "vite/client",
      "electron-vite/node"
    ],
    "typeRoots": [
      "main/types/**/***/*"
    ]
  },
  "include": ["package.json", "main/**/*", "../../packages/utils/plugin/index.ts"]
}
