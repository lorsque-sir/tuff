{
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "sourceMap": false,
    "baseUrl": ".",
    "strict": false,
    "paths": {
      "~/*": ["./*"],
      "@assets/*": ["./renderer/assets/*"],
      "@comp/*": ["./renderer/components/*"],
      "@modules/*": ["./renderer/modules/*"],
      "@styles/*": ["./renderer/styles/*"]
    },
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true
  },
  "include": ["renderer/**/*", "renderer/modules/channel", "renderer/assets/**/*"],
}
